@model ProductViewModel
@{
    Layout = "_AdminLayout";
}
<div class="container mt-4">
    <div class="card" style="max-width: 600px;">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Update Product</h2>
        </div>
        <div class="card-body">
            <form asp-action="UpdateProduct" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Image" />

                <div class="mb-3">
                    <label class="form-label">Product Name*</label>
                    <input type="text" class="form-control" asp-for="ProductName" required />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Category*</label>
                    <select class="form-select" asp-for="CategoryId" asp-items="Model.CategoryList" required>
                        <option value="">Select Category</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Price*</label>
                    <input type="number" step="0.01" class="form-control" asp-for="Price" required />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" asp-for="Description" style="height: 100px" maxlength="256">@Model.Description</textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Image</label>
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="/images/@Model.Image" class="img-thumbnail mb-2 d-block" style="max-width: 150px;" />
                    }
                    <input type="file" class="form-control" asp-for="ImageFile" accept=".jpg,.jpeg,.png" />
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">Back</a>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>

